<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna lembut pastel keabu-abuan -->
    <solid android:color="#FFF8E7" />

    <!-- Sudut membulat -->
    <corners android:radius="16dp" />

    <!-- Bayangan lembut -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Garis tepi tipis -->
    <stroke
        android:width="1dp"
        android:color="#E0DCC7" />

</shape>
